    <script>

        document.getElementById("submitBtn").addEventListener("click", async function (event) {
            event.preventDefault()

            const name = document.getElementById("name").value
            const description = document.getElementById("description").value
            const dataId = document.getElementById("name").getAttribute("data-id")
            nameError = document.getElementById("name-error")
            descriptionError = document.getElementById("description-error")
            console.log(dataId);
            console.log(description);

            const data = { name, description, dataId }

            if (name === "") {
                nameError.textContent = "Name is required";

                return;
            } else if (/^\d+$/.test(name)) {
                nameError.textContent = "Name cannot contain digits";

                return;
            } else if (!/^[a-zA-Z\s]*$/.test(name)) {
                nameError.textContent = "Name cannot contain special characters";

                return;
            } else {
                nameError.textContent = "";
            }
            if (description === "") {
                descriptionError.textContent = "description is required";
                return;
            }
            else if (!/^[a-zA-Z\s]*$/.test(description)) {
                descriptionError.textContent = "description cannot contain special characters";
                return;
            }

            try {
                const response = await fetch("/admin/update-categories", {
                    method: "PUT",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify(data)
                })

                if (response.ok) {
                    const responseData = await response.json()
                    console.log(responseData);
                    if (responseData.message) {
                        console.log("hai");
                        const categoryError = document.getElementById("category-error")
                        categoryError.textContent = responseData.message
                    }
                    else {
                        console.log("hello");
                        window.location.href = responseData.redirect
                    }
                }
            } catch (error) {

            }


        })
    </script>
